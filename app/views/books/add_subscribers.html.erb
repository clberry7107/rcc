<div class="large-12 columns">
  <h2>Add subscribers for <%= @book.title %></h2>
  <div>
    <%= form_tag("/book_subscribers/create", method: :post) do %>
    <%= hidden_field_tag(:id, @book.id) %>
    
    <div class="large-10 columns">
      <table> 
        <tr>
          <th>Subscriber</th>
          <th>Order Quantity</th>
        </tr>
        <% @subscribers.each do |subscriber| %>
          <tr>
            <td><%= subscriber.full_name %></td>
            <td><%= label_tag(:q, "Quantity:") %>
                <%= number_field(:q, subscriber.id, :step => 1, :min => 0 ) %></td>
          </tr>
        <% end %>
      </table>  
    </div>
    <div class="large-2 columns">
      <%= submit_tag  "Add Subscribers", :class => "button success" %>
    </div>
  <% end %>
  </div>
</div>
