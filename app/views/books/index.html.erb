<div>
  <p id="notice"><%= notice %></p>
</div>
<div class="row">
  <div>
    <h2>Current Book List</h2>
    <h6>Total Books: <%= @books.count %></h6>
    <% if can? :add_book %>
      <h6><%= button_to "Add Book", new_book_path, class: "button success" %> </h6>
    <% end %>
    <table> 
      <tr>
        <th>Title</th>
        <th>Notes</th>
        <th>Active</th>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.notes %></td>
          <td><%= book.active %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
</div>

