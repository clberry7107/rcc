<div>
  <p id="notice"><%= notice %></p>
</div>
<div class="row">
  <div>
    <h2>Current Subscribers</h2>
    <h6>Total Subscribers: <%= @subscribers.count %></h6>
    <h6><%= button_to "Add Subscriber", new_subscriber_path, :method => :get, class: "button success" %></h6>
      <table> 
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
      </tr>
      <% @subscribers.each do |subscriber| %>
      <tr>
        <td><%= link_to subscriber.full_name || "", subscriber_path(subscriber) %></td>
        <td><%= link_to subscriber.email || "", subscriber_path(subscriber) %></td>
        <td><%= link_to subscriber.address || "", subscriber_path(subscriber) %></td>
        <td><%= link_to subscriber.city || "", subscriber_path(subscriber) %></td>
        <td><%= link_to subscriber.state || "", subscriber_path(subscriber) %></td>
        <td><%= link_to subscriber.f_zip || "", subscriber_path(subscriber) %></td>
        <% if can? :destroy, Subscriber %>
        <td><%= link_to "Delete Subscriber" , subscriber_path(subscriber), :method => :delete, :data => {:confirm => "This will permenently delete #{subscriber.full_name}\nAre you sure?"} %></td>
        <% end %>
      </tr>
      <% end %>
    </table>
  </div>
</div>


